{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": ["airbnb-base", "plugin:@typescript-eslint/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "import/extensions": [
       "error",
       "ignorePackages",
       {
         "ts": "never"
       }
     ]
   },
   "settings": {
     "import/resolver": {
       "typescript": {}
     }
   }
  }
